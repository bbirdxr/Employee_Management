<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.employee.mapper.EmployeeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.employee.entity.Employee">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="email" property="email" />
        <result column="phone_number" property="phoneNumber" />
        <result column="hire_date" property="hireDate" />
        <result column="salary" property="salary" />
        <result column="level" property="level" />
        <result column="position_id" property="positionId"/>
        <result column="department_id" property="departmentId"/>
        <result column="create_time" property="createTime"  />
        <result column="update_time" property="updateTime" />
    </resultMap>


    <select id="findAllWithCondition" parameterType="com.example.employee.entity.Employee" resultType="com.example.employee.entity.Employee">
        select * from employee
        where
        1='1'
            <if test="positionId!=null and positionId!=''">
               and position_id=#{positionId}
            </if>
            <if test="name!=null and name!=''">
                and  name=#{name}
            </if>
            <if test="email!=null and email!=''">
                and  email=#{email}
            </if>
            <if test="level!=null and level!=''">
                and level=#{level}
            </if>
            <if test="salary!=null and salary!=''">
                and salary=#{salary}
            </if>
            <if test="departmentId!=null  and departmentId!=''">
                and department_id=#{departmentId}
            </if>
            <if test="id!=null and id!=''">
                and id=#{id}
           </if>

    </select>


    <update id="updateById" parameterType="com.example.employee.entity.Employee">
        update employee
           <set>
               <if test="position_id!=null">
                   position_id=#{position_id},
               </if>
               <if test="name!=null">
                   name=#{name},
               </if>
               <if test="email!=null">
                   email=#{email},
               </if>
               <if test="level!=null">
                   level=#{level},
               </if>
               <if test="salary!=null">
                   salary=#{salary},
               </if>
               <if test="department_id!=null">
                   department_id=#{phone_number},
               </if>
           </set>
            where  id=#{id}
    </update>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, email, phone_number, hire_date, salary, create_time, update_time,position_id,department_id,level
    </sql>

    <select id="selectByName" resultType="com.example.employee.entity.Employee">
        select id, name, email, phone_number, hire_date, salary, create_time, update_time,level
        from employee
        where name = #{name}
    </select>

</mapper>
